div(id='{$_name}' class="{$class} row" style="{$style}")
	{item_count_wrapper}
	div.row.item-count-container
		div.col-md-9.col-sm-9.category-name
			p {$category_name}{$designer_name}
		div.col-md-3.col-sm-3.item-count.text-right
			p {$item_count}
	{/}
	{rows}{row}
	{$micro_data}
	div.col-md-4.bottom-cd.simpleCart_shelfItem
		{image_wrapper}
		.product-at
			a(href='{$item_detail_page_url_via_image}')
				img.xepan-commerce-item-img.img-responsive(src='{first_image}abc{/}')
				.pro-grid
					span.buy-in Buy Now
		{/image_wrapper}
		{name_wrapper}
		p.tun
			span
			br
			a.xepan-commerce-item-name(href='{item_detail_page_url_via_name}{/}') {$name}
		{/}
		{sale_price_wrapper}
		.ca-rt
			a.item_add(href='#')
				p.xepan-commerce-tool-item-sale-price.number.item_price
					i  
					| {$sale_price}
		{/}
		{original_price_wrapper}
		.ca-rt
			a.item_add(href='#')
				p.xepan-commerce-tool-item-original-price.number.item_price
					i
					| {$original_price}
		{/}
		{shipping_charge_wrapper}
		.ca-rt
			a.item_add(href='#')
				p.xepan-commerce-tool-item-shipping-charge.list-group-item
					i
					| {$shipping_charge}
		{/}
		{description_wrapper}
		p.xepan-commerce-item-short-description(onclick='javascript:void(0)')
			{$description}
		{/}

		{specification_wrapper}
		p.xepan-commerce-tool-item-specification
			{specification}
			{rows}{row}
			.row
				.col-md-6.col-sm-6.col-xs-12
					{$name}
				.col-md-6.col-sm-6.col-xs-12
					{$value}
			{/}{/}
			{/specification}
		{/}
		{personalizedbtn_wrapper}
		div(data-xsnbitemid="{$id}" class="commerce-personalize-button-wrapper")
			{$personalizedbtn}
		{/}
		{addtocart_wrapper}
		.xepan-commerce-item-addtocart(data-xsnbitemid="{$id}" data-name="{$name}"){$Addtocart}
		{/}

	{/}{/}
	{not_found}
	div.full-width.alert.alert-warning(role="alert")
		strong.glyphicon.glyphicon-warning-sign &nbsp;Warning!
			span &nbsp;{$not_found_message}
	{/}
	{paginator_wrapper}
	.xepan-commerce-item-paginator(style='float:none; clear:both')
		{$Paginator}
	{/}

	style.
		.xepan-commerce-item-addtocart input, .xepan-commerce-item-addtocart select{
			width:100%;
		}
		.xepan-commerce-item-img{
			max-width:100%;
		}
		.xepan-commerce-item-name-wrapper {
			min-height:50px;
		}
		.xepan-commerce-item-paginator{
			margin-top:10px;
			width:99%; 
			border: 1px solid #dadde0;
		}

		.xepan-commerce-item-paginator > div{
			padding: 0.5em !important;
			border-radius: 0px !important;
			width: 100%;
			text-align:center;
			margin:0 auto 0px auto !important;
		}

		.xepan-commerce-item-paginator a{
			border: 1px solid #A2D9F6;
			border-radius: 3px !important;
			font-weight: bold;
			padding: 4px 10px 4px 10px !important;
		}
		.xepan-commerce-item-paginator a.ui-state-active {
			color:red !important;
		}
		.xepan-commerce-image-wrapper{
			text-align:center;
		}
		.xepan-commerce-image-wrapper{
			height:220px;
			max-height:220px;
		}
		.xepan-commerce-image-wrapper .xepan-commerce-item-img{
			max-height:200px !important;
		}